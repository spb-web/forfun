{
  "failOnInvalidModuleImport": true,
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "composite": true,
    "esModuleInterop": true,
    "module": "es2022",
    "lib": ["ES2020", "DOM"],
    "target": "ES2020",
    "importsNotUsedAsValues": "remove",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "useDefineForClassFields": true,
    "noImplicitThis": true,
    "strict": true,
  },
  "exclude": ["node_modules"],
  "include": ["./src"],
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node",
  }
}
